{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,         
      "checkJs": false,          
      "outDir": "./dist",      
      "rootDir": "./src",        
      "resolveJsonModule": true  
    },
    "include": ["src/**/*"],     
    "exclude": ["node_modules", "dist"]
}
  